local function sendMessage(message)
    local ChatService = game:GetService("Chat")
    local players = game.Players:GetPlayers()

    for _, player in ipairs(players) do
        ChatService:Chat(player, message, Enum.ChatColor.White)
    end
end

-- دالة لتنفيذ السكربت
local function executeScript(scriptUrl)
    loadstring(game:HttpGet(scriptUrl))()
end

-- الرسالة التي تريد إرسالها
local welcomeMessage = "مرحباً بك في مابي!"

-- إرسال الرسالة عشر مرات
for i = 1, 10 do
    sendMessage(welcomeMessage)
end

-- تنفيذ السكربت
executeScript("https://scriptblox.com/raw/GHOST-Blox-Fruits-BT-Project-9287")
